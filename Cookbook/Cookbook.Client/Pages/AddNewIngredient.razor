<p>New ingredient: </p>
<div>
	<label for="name">Ingredient:</label>
	<input type="text" id="name" name="name" @bind="@Name">
</div>
<br>
<div>
	<label for="qty">Quantity:</label>
	<input type="number" id="qty" name="qty" min="0" max="9999" step="0.01" @bind="@Qty">
</div>
<br>
<div>
	<label for="unit">Unit of measurement:</label>
	<input type="text" id="unit" name="unit" @bind="@Unit">
</div>
<br>

@code{
	public string Name { get; set; } = "";
	public float Qty { get; set; }
	public string Unit { get; set; } = "";
}